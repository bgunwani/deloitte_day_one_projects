
@{
    ViewData["Title"] = "Index";
}

<h3>@ViewBag.Message</h3>
<p>There are @ViewBag.StudentCount students added into the list.</p>

<table class="table">
    <thead>
        <tr>
            <th>Student Id</th>
            <th>Student Name</th>
            <th>Student Age</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in ViewBag.Students)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Age</td>
            </tr>
        }
    </tbody>
</table>